<div class="container">
	<h1>All Products</h1>
	<hr>
	
	<%= will_paginate @products, renderer: BootstrapPagination::Rails %>

	<div class="row">
		<% @products.each_slice(3) do |products| %>
			<div class="row">
				<% products.each do |product| %>
					<div class="col-md-4">
						<div class="well">
							<% if product.image %>
								<%= image_tag product.image.url(:medium) %>
							<% end %>
							<h2><%= product.name %></h2>
							<p>
								<%= product.short_description %>
								<% if product.description.length > 130 %>
									<%= link_to "show more>>", product_path(product) %>
								<% end %>
							</p>
						</div>
						<hr>
						<%= link_to "Show", product_path(product), class: "btn btn-xs btn-info" %>
						<%= link_to "Edit", edit_product_path(product), class: "btn btn-xs btn-primary" %>
						<%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Sure to delete?"}, class: "btn btn-xs btn-danger" %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	
	<%= will_paginate @products, renderer: BootstrapPagination::Rails %>
	
	<hr>

	<%= link_to "New Product", new_product_path, class: "btn btn-default" %>

</div>