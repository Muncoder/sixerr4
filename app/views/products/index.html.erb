<div class="container">
	<h1>All Products</h1>
	<hr>
	
	<div class="row">
		<% @products.each do |product| %>
			<div class="col-md-4">
				<div class="well">
					<% if product.image %>
						<%= image_tag product.image.url(:medium) %>
					<% end %>
					<h2><%= product.name %></h2>
					<p><%= product.description %></p>
				</div>
			</div>
		<% end %>
	</div>

	<hr>

	<%= link_to "New Product", new_product_path, class: "btn btn-default" %>

</div>