<div class="container">
	<h1>My Products</h1>
	<hr>
	
	<div class="row">
		<% @products.each do |product| %>
			<div class="col-md-4">
				<div class="well">
					<% if product.image %>
						<%= image_tag product.image.url(:medium) %>
					<% end %>
					<h2><%= product.name %></h2>
					<p><%= product.description %></p>
				</div>
				<hr>
				<%= link_to "Show", product_path(product), class: "btn btn-xs btn-info" %>
				<%= link_to "Edit", edit_product_path(product), class: "btn btn-xs btn-primary" %>
				<%= link_to "Delete", product_path(product), method: :delete, data: {confirm: "Sure to delete?"}, class: "btn btn-xs btn-danger" %>
			</div>
		<% end %>
	</div>

	<hr>

	<%= link_to "New Product", new_product_path, class: "btn btn-default" %>

</div>