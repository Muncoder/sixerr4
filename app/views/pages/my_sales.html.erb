<h1>My Sales</h1>
<div class="container">
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>Image</th>
				<th>Buyer</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Total Price</th>
			</tr>
		</thead>
		<tbody>
			<% @sales.each do |product| %>
				<tr>
					<td>
						<%= product.name %>
					</td>
					<td><%= image_tag product.image.url(:thumb) %></td>

					<% product.orders.each do |sale_product| %>
						<td> <%= image_tag avatar_url(sale_product.user) %></td>
						<td><%= sale_product.quantity %></td>
						<td><%= sale_product.price %></td>
						<td><%= sale_product.total_price %></td>
						</tr>
						<td></td>
						<td></td>
					<% end %>
			<% end %>
		</tbody>

	</table>
</div>