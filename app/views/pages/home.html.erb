<div id="home_header">
	<div class="row" id="search-form">
		<div class="col-md-3">

		</div>
		<div class="col-md-6">
			<center>
				<span class="search-text">
					Hi, What you like to search today ?

					<%= form_tag search_path, method: :get do %>
						<div class="form-group center" style="color: black">
							<%= text_field_tag :q, nil, class: "form-control" %>
						</div>
						<%= submit_tag "Search", class: "btn btn-default" %>
					<% end %>

				</span>
			</center>
		</div>
		<div class="col-md-3">

		</div>
		
	</div>

</div>

